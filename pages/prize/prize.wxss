/* miniprogram/pages/account/account.wxss */
page {
  background-color: #e9eef2;
}

.container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 50rpx;
  height: 50rpx;
  margin-bottom: 100rpx;
  padding-bottom: 100rpx;
  /* padding: 10rpx; */
  /* border-radius: 20rpx;
  box-shadow: 10px 0px 10px rgba(0,0,0,0.5);*/
  /* background-color: white;  */
}

.text-style {
  margin: 50rpx;
  margin-bottom: 100rpx;
  font-size: 22rpx;
  color: #b6b6b6;
}

.stangle-style {
  background-color: white;
  width: 30%;
  height: 200rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  border-right: 7rpx dashed #e9eef2;
}

.stangle-style-right {
  width: 70%;
  border-top-left-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  background-color: white;
  height: 200rpx;
}

.flex-style {
  display: flex;
  flex-direction: row;
}

.stangel {
  align-items: center;
  justify-content: center;
}



.stangelling {
  align-items: center;
  justify-content: space-between;
}

.text-style-change {
  margin-right: 50rpx;
}


.right {
  align-items: center;
  justify-content: flex-start;
}

.column-flex-style {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
}

.padding-rows {
  padding: 10rpx;
}

.padding-rows text {
  color: #666;
  font-size: 22rpx;
}

.cash {
  display: flex;
  background-color: #29AD69;
  color: white;
  margin: 40rpx;
  padding: 40rpx;
  font-size: 28rpx;
  align-items: center;
  border-radius: 10rpx;
  margin-bottom: 100rpx;
}

.cash .cash_content {
  flex: 1;
}

.cash .cash_num {
  margin-top: 20rpx;
  font-size: 36rpx;
}

.cash .cash_btn {
  width: 60rpx;
  background-color: white;
  color: #29AD69;
  padding: 10rpx 22rpx;
  height: 40rpx;
  text-align: center;
  border-radius: 10rpx;
}

.cash .cash_btn:active {
  background-color: #999;
}

.ticket {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ticket_content {
  flex: 1;
}

.ticket_btn {
  width: 60rpx;
  font-size: 28rpx;
  background-color: #f2f2f2;
  padding: 10rpx 20rpx;
  margin-right: 6rpx;
  border-radius: 10rpx;
  color: rgb(180, 60, 60);
}