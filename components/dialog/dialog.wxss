.background{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  display: flex;
  flex-direction: row;
  align-items: center;
  z-index: 9999;
}

.wrapper {
  width: 100%;
  display: flex;
  align-items: center;
  height: 100%;
  text-align: center;
  margin: 0 auto;
}

.block {
  width: 85%;
  position: relative;
  margin: auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 40rpx 0rpx 0rpx;
}

.block .title{
  text-align: center;
  font-size: 16px;
  font-weight: bold;
  margin: 0rpx auto 20rpx;
}

.block .content {
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

.block .img {
  width: 80%;
  margin: 20rpx 0;
  border-radius: 10rpx;
}

.btn {
  width: 100%;
  /* position: absolute;
  bottom: 10rpx; */
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1px solid #f2f2f2;
  font-size: 28rpx;
}

.btn>view {
  width: 50%;
  padding: 15rpx 0;
}

.btn>view:active {
  background-color: #f1f1f1;
}

.btn .btn_submit {
  color: red;
  border-left: 1px solid #f2f2f2;
}